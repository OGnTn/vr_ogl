{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-rpath",
                "${workspaceFolder}/lib",
                
                "${fileDirname}/*.cpp",
                "${fileDirname}/glad.c",
                
                "-lglfw3",
                "-framework",
                "Cocoa",
                "-framework",
                "OpenGL",
                "-framework",
                "IOKit",
                "-lm",
                //"${workspaceFolder}/lib/libglfw.3.dylib",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "clang mac",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "-std=c++17",
                "-o",
                "${workspaceFolder}/myprogram.exe",
                "-I${workspaceFolder}\\include",
                "${fileDirname}\\*.cpp",
                "${fileDirname}\\glad.c",
                //"${workspaceFolder}/lib/libglfw.3.dylib",
                "-lglfw3",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/clang"
        }
    ],
    "version": "2.0.0"
}